<Window x:Class="ProductManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManager.ViewModel"
        mc:Ignorable="d"
        Title="ProduktManager"
        Icon="/Shared/Icons/productmanager_black.png"
        Height="1080"
        Width="1920"
        MinHeight="100"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Topmost="False">

    <DockPanel LastChildFill="True" Background="{StaticResource dBlau}">

        <StackPanel DockPanel.Dock="Left" Width="100" Orientation="Vertical" VerticalAlignment="Top">

            <Border Height="80" Background="{StaticResource Orange}">
                <Image Source="/Shared/Icons/productmanager_black.png" Height="50"/>
            </Border>

            <Border Background="{StaticResource hBlau}" Width="100" Margin="0 5 0 5">
                <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Shared/Icons/products_white.png" Height="40"/>
                        <Label Content="Produkte"
                               HorizontalAlignment="Center"
                               Margin="0 0 0 0"
                               Foreground="White"
                               FontSize="16"/>
                    </StackPanel>
                </Button>
            </Border>

            <Border Background="{StaticResource dBlau}" Width="100" Margin="0 5 0 5">
                <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Shared/Icons/users_white.png" Height="40"/>
                        <Label Content="Nutzer"
                               HorizontalAlignment="Center"
                               Margin="0 -5 0 0"
                               Foreground="White"
                               FontSize="16"/>
                    </StackPanel>
                </Button>
            </Border>

            <Border Background="{StaticResource dBlau}" Width="100" Margin="0 5 0 5">
                <Button HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0">
                    <StackPanel Orientation="Vertical">
                        <Image Source="/Shared/Icons/shipping_white.png" Height="40"/>
                        <Label Content="Versand"
                               HorizontalAlignment="Center"
                               Margin="0 -5 0 0"
                               Foreground="White"
                               FontSize="16"/>
                    </StackPanel>
                </Button>
            </Border>
        </StackPanel>

        <Frame Name="mainFrame"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource hGrau}"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Source="/3 - View/Pages/ProductsPage.xaml"/>
    </DockPanel>
</Window>