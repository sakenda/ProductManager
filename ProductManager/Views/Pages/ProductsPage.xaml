<Page x:Class="ProductManager.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductManager"
      mc:Ignorable="d" 
      d:DesignHeight="800"
      d:DesignWidth="1400"
      FontSize="18"
      Background="White">

    <Page.Resources>
        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#EDEDEE"/>
            <EventSetter Event="SelectionChanged" Handler="ListView_SelectionChanged"/>
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2279BE">
            <Image Source="/Shared/Icons/products_white.png"
                   Height="30"
                   Margin="10 0 10 0"
                   VerticalAlignment="Center"/>
            <Label Content="Produkte"
                   Padding="0"
                   VerticalContentAlignment="Center"
                   FontWeight="Light"
                   Foreground="White"/>
        </StackPanel>

        <!-- SUCHFELD -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Background="#EDEDEE">

            <TextBox Text="Search..."
                     Width="450"
                     Margin="10"
                     Padding="10 0 0 0"
                     VerticalContentAlignment="Center"/>

            <Button Style="{StaticResource btnDefault}"
                    Width="140">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Shared/Icons/add_white.png" Height="24"/>
                        <Label Content="Neu"
                               Margin="5 0 0 0"
                               Padding="0"
                               VerticalContentAlignment="Center"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Style="{StaticResource btnDefault}"
                    Width="140"
                    IsEnabled="False">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" Name="btnDelete">
                        <Image Source="/Shared/Icons/delete_white.png" Height="24"/>
                        <Label Content="Löschen"
                               Margin="5 0 0 0"
                               Padding="0"
                               VerticalContentAlignment="Center"
                               FontWeight="Bold"
                               Foreground="White"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>

        <!-- LISTVIEW -->
        <StackPanel Background="White" Grid.Row="2" Margin="10 10 10 0">
            <ListView x:Name="ListView_ProductList"
                      SelectionChanged="ListView_SelectionChanged">

                <ListView.View>
                    <GridView>

                        <GridViewColumn Width="50">
                            <GridViewColumn.Header>
                                <CheckBox IsEnabled="False"/>
                            </GridViewColumn.Header>

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsEnabled="False"
                                              IsChecked="{Binding isDirty, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="100" Header="IdentNr" DisplayMemberBinding="{Binding Path=ProductID}"/>
                        <GridViewColumn Width="150" Header="Hersteller" DisplayMemberBinding="{Binding Path=SupplierData.SupplierName}"/>
                        <GridViewColumn Width="200" Header="Name" DisplayMemberBinding="{Binding Path=ProductName}"/>
                        <GridViewColumn Width="100" Header="Preis" DisplayMemberBinding="{Binding Path=Price}"/>
                        <GridViewColumn Width="100" Header="Bestand" DisplayMemberBinding="{Binding Path=Quantity}"/>
                        <GridViewColumn Width="200" Header="Beschreibung" DisplayMemberBinding="{Binding Path=Description}"/>
                        <GridViewColumn Width="150" Header="Kategorie" DisplayMemberBinding="{Binding Path=CategoryData.CategoryName}"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- PRODUKTFELD -->

    </Grid>
</Page>
